# Preload critical resources
/
  Link: <https://api.fontshare.com>; rel=preconnect; crossorigin
  Link: </images/profile2-hero.webp>; rel=preload; as=image; type=image/webp
  Link: </images/profile2.webp>; rel=preload; as=image; type=image/webp

# HTML - short cache, always revalidate
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Hashed JS/CSS - immutable
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

/assets/*.css
  Cache-Control: public, max-age=31536000, immutable

# Images - medium cache with revalidation
/images/*
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800

# Favicon
/favicon.svg
  Cache-Control: public, max-age=604800

# SEO static files
/robots.txt
  Cache-Control: public, max-age=86400

/sitemap.xml
  Cache-Control: public, max-age=86400

/llms.txt
  Cache-Control: public, max-age=86400

/site.webmanifest
  Cache-Control: public, max-age=604800
